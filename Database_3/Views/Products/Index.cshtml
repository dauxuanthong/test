@model IEnumerable<Database_3.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Product</h2>

<table class="table table-striped">
	<tr>
		<th>Id</th>
		<th>Product Name</th>
		<th>Price</th>
	</tr>
	<!--Access in product table and get value-->
	@foreach (var product in Model)
	{
		<tr>
			<td>@product.ProId</td>
			<td>@product.ProName</td>
			<td>@product.Price</td>
		</tr>
	}
</table>

@Html.ActionLink("Create a new Product", "Create")